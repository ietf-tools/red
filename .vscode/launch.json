    "version": "0.2.0",
    "configurations": [

        {
            "name": "Dev server",
            "type": "node-terminal",
            "request": "launch",            
            "cwd": "${workspaceRoot}/client",
            "command": "npm run dev && exit",
            "presentation": {
                "hidden": false
            }
        },
        {
            "name": "Build",
            "type": "node-terminal",
            "request": "launch",            
            "cwd": "${workspaceRoot}/client",
            "command": "npm run build",
            "presentation": {
                "hidden": false
            }
        },
        {
            "name": "Build prod mode and preview server",
            "type": "node-terminal",
            "request": "launch",            
            "cwd": "${workspaceRoot}/client",
            "command": "npm run preview && exit",
            "presentation": {
                "hidden": false
            },
        },
        {
            "name": "Test visual regressions",
            "type": "node-terminal",
            "request": "launch",            
            "cwd": "${workspaceRoot}/client",
            "command": "npm run test:story",
            "presentation": {
                "hidden": false
            }
        },
        {
            "name": "Approve visual regressions",
            "type": "node-terminal",
            "request": "launch",            
            "cwd": "${workspaceRoot}/client",
            "command": "npm run test:story:approve",
            "presentation": {
                "hidden": false
            }
            
        }
    ]
}