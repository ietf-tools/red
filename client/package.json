{
  "name": "rfced-www",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run generate && nuxt build",
    "dev": "npm run generate && nuxt dev",
    "cleanup": "nuxt cleanup",
    "preview": "npm run build && nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "npm run test:unittests && npm run test:types && npm run test:lint",
    "test:lint": "eslint .",
    "test:lint:fix": "eslint . --fix",
    "test:types": "npx nuxi typecheck",
    "test:unittests": "vitest run",
    "test:unittests:watch": "vitest",
    "test:story": "npm run story:build && LOST_PIXEL_DISABLE_TELEMETRY=1 npx --no lost-pixel docker",
    "test:story:view": "npx --no -c 'vite dev ./visual-regression-viewer'",
    "test:story:approve": "npm run story:build && LOST_PIXEL_DISABLE_TELEMETRY=1 npx --no lost-pixel docker update",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview --port 4567",
    "generate": "npm run generate:content-metadata && npm run generate:api-red",
    "generate:content-metadata": "node --experimental-strip-types ./scripts/generate-content-metadata.ts",
    "generate:api-red": "npx --no apigen-ts http://localhost:8000/api/schema/ --inline-enums --parse-dates ./generated/red-client.ts"
  },
  "//": "If updating lost-pixel sync the version to the vis-reg-test.yml and post-create.sh or test rendering / snapshot filenames generated etc may be different",
  "dependencies": {
    "@nuxt/content": "^2.13.4",
    "@nuxt/fonts": "^0.7.2",
    "@nuxt/icon": "^1.5.0",
    "@nuxtjs/color-mode": "^3.4.4",
    "@pinia/nuxt": "^0.5.4",
    "@tailwindcss/vite": "4.0.14",
    "apigen-ts": "^1.1.0",
    "feed": "^4.2.2",
    "lodash-es": "^4.17.21",
    "luxon": "^3.5.0",
    "nuxt": "3.16.1",
    "pinia": "^2.2.2",
    "reka-ui": "2.1.1",
    "simple-git": "^3.27.0",
    "tailwindcss": "4.0.14",
    "vue": "3.5.13"
  },
  "devDependencies": {
    "@histoire/plugin-nuxt": "^0.17.17",
    "@histoire/plugin-vue": "^0.17.17",
    "@nuxt/eslint": "^0.5.3",
    "@nuxt/test-utils": "^3.15.1",
    "@playwright/test": "^1.49.1",
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.4.2",
    "@vue/test-utils": "^2.4.6",
    "fast-xml-parser": "^4.5.1",
    "happy-dom": "^15.11.7",
    "lost-pixel": "^3.22.0",
    "playwright": "^1.49.1",
    "playwright-core": "^1.49.1",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.0.29"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  }
}
